# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for all text files
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.sh text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Documentation
*.rst text eol=lf
LICENSE text eol=lf
README text eol=lf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.xlsx binary
*.xls binary
*.csv text eol=lf

# Windows specific files can use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf